#include <cstdlib>
#include <vigra/unittest.hxx>

template <typename Iter>
void fillRandom(Iter begin, Iter end, int max)
{
    for (; begin != end; ++begin)
        *begin = rand() % max;
}

template <typename Iter1, typename Iter2>
void compare(Iter1 b1, Iter1 e1, Iter2 b2)
{
    for (; b1 != e1; ++b1, ++b2)
        shouldEqual(*b1, *b2);
}
